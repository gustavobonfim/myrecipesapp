<%= render 'shared/errors', obj: @chef %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="col-md-8">
          <div class="form-group">
            <div class="control-label col-md-offset-2 col-md-4">
              <%= f.label :chefname, "Choose Chefname"%>
            </div>
            <div class="col-md-6">
              <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-md-offset-2 col-md-4">
              <%= f.label :email %>
            </div>
            <div class="col-md-6">
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-md-offset-2 col-md-4">
              <%= f.label :password, "Senha" %>
            </div>
            <div class="col-md-6">
              <%= f.password_field :password, class: "form-control", placeholder: "Entre com sua senha", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-md-offset-2 col-md-4">
              <%= f.label :password_confirmation, "Confirm Pass" %>
            </div>
            <div class="col-md-6">
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password", autofocus: true %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <div class="flex-sign btn-container-center btn-container-col-center button-wrapper">
              <%= f.submit(@chef.new_record? ? "Create my Account" : "Atualizar Minha Conta", class: "btn btn-primary btn-lg") %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4">
        [<%= link_to "Cancel request and return to recipes listing", recipes_path, class: "cancel-request" %>]
      </div>
    </div>
  </div>
</div>
