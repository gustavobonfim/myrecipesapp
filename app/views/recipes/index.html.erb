<%= render 'shared/page_title', title: "showing all recipes" %>
<div class="container">
  <% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-sm-2">
        <section class="chef-info">
          <%= gravatar_for(recipe.chef, size: 120) %>
        </section>
      </div>
      <div class="col-sm-8">
        <div class="well">
          <h5><%= link_to "#{recipe.name}", recipe_path(recipe) %></h5>
          <hr />
          <p><%= truncate(recipe.description, length: 100) %></p>
          <span class="quiet">
            <small><%= recipe.chef.chefname %></small> |
            <small><%= time_ago_in_words(recipe.created_at)%></small>
          </span>
        </div>
      </div>
      <div class="col-sm-2">
        <h1>Recipe's Image</h1>
      </div>
    </div>
  <% end %>
</div>
