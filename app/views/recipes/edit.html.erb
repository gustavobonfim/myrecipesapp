<%= render 'shared/page_title', title: @recipe.name.capitalize %>

<% if @recipe.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@recipe.errors.count, "error") %>
              prohibited this <%= @recipe.class %> from been saved:
            </h2>
            <div class="panel-body">
              <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :name %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Nome of the recipe", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :description %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Steps of the recipe", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit class: "btn btn-primary btn-md" %>
          </div>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4">
        [<%= link_to "Cancel request and return to recipes listing", recipes_path, class: "cancel-request" %>]
      </div>
    </div>
  </div>
</div>
